<%- include("../partials/header", {title: `${check.name}`})%>
<%- include("../partials/nav")%>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-four-fifths">
        <h1 class="title size-4"><%=check.name%></h1>
      </div>
      <div class="column is-one-fifth">
        <a href="/checklist/<%=check._id%>/task" class="button is-success is-small">Nova Tarefa</a>
        <a href="/checklists" class="button is-small">Voltar</a>
      </div>
    </div>

    <hr />

    <% check.task.forEach(task => {%>
      <div class="columns">
          <div class="column is-four-fifths">
            <input type="checkbox" /> <%=task.name%>
          </div>

          <div class="column is-one-fifth">
            <a href="/task/<%=task._id%>?_method=delete"><button class="button is-danger is-small">Remover</button></a>
          </div>
        </div>
    <%})%>

    
    </div>
  </div>
</section>

<%- include("../partials/footer")%>